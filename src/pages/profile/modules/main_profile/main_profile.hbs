<form>
    {{{avatar}}}
  <div class="profile__username">{{name}}</div> 
    <div class="profile__inputs">
        <label class='profile__input' for="email">
            Почта
            {{{emailInput}}}
        </label>
        <span class="divider"></span>
        <label class='profile__input' for="login">
            Логин
            {{{loginInput}}}
        </label>
        <span class="divider"></span>
        <label class='profile__input' for="first_name">
            Имя
            {{{nameInput}}}
        </label>
        <span class="divider"></span>
        <label class='profile__input' for="second_name">
            Фамилия
            {{{secondNameInput}}}
        </label>
        <span class="divider"></span>
        <label class='profile__input' for="display_name">
            Имя в чате
            {{{displayNameInput}}}
        </label>
        <span class="divider"></span>
        <label class='profile__input' for="phone">
            Телефон
            {{{phoneInput}}}
        </label>
    </div>

    <div class="profile__actions">
        {{{changeInfoButton}}}
        {{{changePasswordButton}}}
        {{{logoutButton}}}
    </div>
</form>

